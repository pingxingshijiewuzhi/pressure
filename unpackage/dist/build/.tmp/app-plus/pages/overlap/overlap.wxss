.tx {
	border-radius: 50%;
}
.content {
	height: 100vh;
	position: relative;
}
.head {
	height: 260rpx;
	width: 100%;
	background-color: #3F7BE9;
}
.head_title {
	width: 30%;
	padding-top: 60rpx;
	position: relative;
}
.head_img {
	width: 24rpx;
	height: 38rpx;
	margin-bottom: 30rpx;
}
.head_left {
	margin-left: 30rpx;
}
.head_left image {
	width: 120rpx;
	height: 120rpx;
}
.right {
	width: 20%;
	letter-spacing: 4rpx;
	margin-top: 40rpx;
}
.day {
	font-size: 64rpx
}
.xl {
	width: 27rpx;
	height: 19rpx;
	position: absolute;
	margin-left: 600rpx;
	margin-top: 360rpx;
}
.datacontent {
	/* 减去头部*/
	height: calc(100vh - 260rpx);
	position: relative;
}
.nodata {
	width: 200rpx;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
}
