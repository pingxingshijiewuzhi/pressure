	/* 设备列表模态框 */
.uni-popup__mask {
	  position: absolute;
	  top: 0;
	  bottom: 0;
	  left: 0;
	  right: 0;
	  z-index: 998;
	  background-color: rgba(0, 0, 0, 0.4);
}
.device_list {
		border: 1rpx solid #ddd;
		border-radius: 10rpx;
		background-color: #FdFdFd;
		min-height: 0rpx;
		max-height: 400rpx;
		width: 700rpx;
		z-index:999;
		position: absolute;
		left: 50%;
		top: 50%;
		-webkit-transform: translate(-50% , -50%);
		        transform: translate(-50% , -50%);
}
.device_item {
		border-bottom: 1rpx solid #ddd;
		padding: 20rpx;
		color: #666;
}
.device_item_hover {
		background-color: rgba(0, 0, 0, .1);
}
