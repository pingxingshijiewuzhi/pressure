}
/* 动态添加背景颜色高亮 */
.addbackcolor {
	color: #FFFFFF !important;
	background-color: #0081FF !important;
}
.mask {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 998;
	background-color: rgba(0, 0, 0, 0.4);
}
.bloothbox {
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	border: 1rpx solid #EEEEEE;
	background-color: #FFFFFF;
	width: 540rpx;
	height: 490rpx;
	z-index: 999;
	overflow-y: scroll;
}
.box {
	width: 540rpx;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	background-color: #F5F5F5;
	border-radius: 10rpx;
	margin: 40rpx 0;
	letter-spacing: 4rpx;
}

